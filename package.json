{
  "name": "horse-racing",
  "version": "1.0.0",
  "type": "module",
  "description": "Interactive horse racing game - Front-end Developer Assessment",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
